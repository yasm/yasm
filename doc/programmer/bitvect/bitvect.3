\&  # initialize
.Ve
.Vb 6
\&  for ( $i = 0; $i < $n; $i++ )
\&  {
\&      $a[$i] = Bit::Vector->new($bits);
\&      $b[$i] = Bit::Vector->new($bits);
\&      $c[$i] = Bit::Vector->new($bits);
\&  }
.Ve
.Vb 1
\&  # fill @a and @b
.Ve
.Vb 3
\&  # $a[  0 ] is low order part,
\&  # $a[$n-1] is high order part,
\&  # and same for @b
.Ve
.Vb 1
\&  # subtract
.Ve
.Vb 5
\&  $carry = 0;
\&  for ( $i = 0; $i < $n; $i++ )
\&  {
\&      $carry = $c[$i]->subtract($a[$i],$b[$i],$carry);
